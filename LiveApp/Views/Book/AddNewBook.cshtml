@model BookModel

@{
    ViewData["Title"] = "AddNewBook";
}

<div class="container">
    <h3 class="display-3">Add New Book</h3>
    <form asp-action="AddNewBook" asp-controller="Book" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            @Html.TextBox("Name")
        </div>
        <div class="form-group">
            @*<label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />*@
            <label asp-for="Author">Author</label>
            @Html.TextBox("Author")
        </div>
        <div class="form-group">
            @*<label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control" />*@
            <label asp-for="TotalPages">Total Pages</label>
            @Html.TextBox("000")
        </div>
        <div class="form-group">
            @*<label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>*@
            <label asp-for="Description">Description</label>
            @Html.TextArea("Description")
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary"/>
        </div>
    </form>
</div>

