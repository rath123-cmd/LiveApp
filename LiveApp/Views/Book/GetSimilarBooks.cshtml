
@{
    Layout = "_Layout";
}

@model IEnumerable<BookModel>
@{
    int index = 1;
}

<div class="container">
    <div class="py-5 bg-light">
        <h4 class="h4">Similar Books</h4>
        <div class="row">
            @foreach (var book in @Model)
            {
                <partial name="_bookThumbnail" model="book" />
                index++;
                if (index > 3)
                    break;
            }
        </div>
    </div>
</div>
