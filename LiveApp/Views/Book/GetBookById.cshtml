
@model BookModel


<div class="container">
    <h3 class="display-3">Book Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="true">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/book/book1.jpg" class="d-block w-100" alt="bookpic1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/book/book2.jpg" class="d-block w-100" alt="bookpic1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/book/book3.jpg" class="d-block w-100" alt="bookpic1">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="h1">@ViewBag.Book.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="form-label">By : </span>
                    <span class="font-monospace">@ViewBag.Book.Author</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        @ViewBag.Book.Description
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <button class="btn btn-outline-primary">Read Me</button>
                </div>
            </div>
            <hr />
            <div class="container">
                <ul class="list-group">
                    <li class="list-group-item"><span class="fw-bold">Category - </span>@ViewBag.Book.Category</li>
                    <li class="list-group-item"><span class="fw-bold">Total pages - </span>@ViewBag.Book.TotalPages</li>
                    <li class="list-group-item"><span class="fw-bold">Language - </span>@ViewBag.Book.Language</li>
                </ul>
            </div>
        </div>
    </div>

    <hr />

    <div class="py-5 bg-light">
        <h4 class="h4">Similar Books</h4>
        <div class="row">
            @for (int i = 0; i < 3; i++)
            {
                <partial name="_bookThumbnail" model="new BookModel()"/>
            }
        </div>
    </div>
</div>
