@model BookModel

<div class="col-md-4">
    <div class="card g-md-4 shadow-sm">
        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg"></svg>
        <div class="card-body">
            <h3 class="card-title">@(String.IsNullOrEmpty(Model.Name) ? "Name is not available" : Model.Name)</h3>
            <p class="card-text">@(String.IsNullOrEmpty(Model.Description) ? "Description is not available" : Model.Description)</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-controller="Book" asp-action="GetBookById" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</div>